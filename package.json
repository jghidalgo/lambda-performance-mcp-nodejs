{
  "name": "lambda-performance-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AWS Lambda performance analysis and cold start optimization",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "./scripts/build.sh",
    "deploy": "./scripts/deploy.sh",
    "docker:build": "docker build -t lambda-performance-mcp .",
    "docker:run": "docker run -it --rm --env-file .env lambda-performance-mcp",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "setup": "cp .env.example .env && npm install",
    "health": "node -e \"console.log('Health check passed')\"",
    "aws:check": "aws sts get-caller-identity"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@aws-sdk/client-lambda": "^3.450.0",
    "@aws-sdk/client-cloudwatch": "^3.450.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.450.0",
    "@aws-sdk/client-sts": "^3.450.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "mcp",
    "aws",
    "lambda",
    "performance",
    "cold-start",
    "optimization"
  ],
  "author": "Your Name",
  "license": "MIT"
}